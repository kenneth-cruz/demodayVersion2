<!doctype html>
<html>
<!-- links to all the files main css, bootstrap etc -->
<head>
  <title>WorldNewsFlash</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="profile.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center">
      <h1><span class="fa fa-globe"></span> WorldFlash Start Page <span class="fa fa-globe"></span></h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
      <a href="/" class="btn btn-default btn-sm" >Home</a>
      <a href="/messageBoard" class="btn btn-default btn-sm" > Message Board</a>

      <!-- logout link -->
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6">
        <div class="well">
          <h3><span class="fa fa-user"></span> Local</h3>

          <% if (user.local.email) { %>
            <p>
            <strong>id</strong>: <%= user._id %><br>
            <strong>email</strong>: <%= user.local.email %><br>
            <strong>password</strong>: <%= user.local.password %>
          </p>

          <a href="/unlink/local" class="btn btn-default">Unlink</a>

          <% } else { %>
          <a href="/connect/local" class="btn btn-default">Connect Local</a>
          <% } %>

        </div>
      </div>
      <div class="col-sm-6">

        <h3>Countries of Interest</h3>
        <ul class="messages">
          <% for(var i=0; i< messages.length; i++) {%>
          <% if (user.local.email == messages[i].name) { %>
          <li class="message">
            <span><%= messages[i].name%></span>
            <span><%= messages[i].msg %></span>
            <span><%= messages[i].thumbUp -= messages[i].thumbDown %></span>
            <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% } %>
          <% } %>
        </ul>

        <h2>What country do you want to learn about?</h2>
        <% if (user.local.email) { %>
        <form action="/messages" method="POST">
          <input type="text" value="<%= user.local.email %>" name="name">
          <input type="text" placeholder="message" name="msg">
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>


      <div class="col-sm-6">

        <h3>Topics of Interest [will be a separate CRUD from above]</h3>
        <ul class="messages">
          <% for(var i=0; i< messages.length; i++) {%>
          <% if (user.local.email == messages[i].name) { %>
          <li class="message">
            <span><%= messages[i].name%></span>
            <span><%= messages[i].msg %></span>
            <span><%= messages[i].thumbUp -= messages[i].thumbDown %></span>
            <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
            <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
            <span><i class="fa fa-trash" aria-hidden="true"></i></span>
          </li>
          <% } %>
          <% } %>
        </ul>

        <h2>What Topics Are You Interested in Learning About</h2>
        <% if (user.local.email) { %>
        <form action="/messages" method="POST">
          <input type="text" value="<%= user.local.email %>" name="name">
          <input type="text" placeholder="topic" name="msg">
          <button type="submit">Submit</button>
        </form>
      </div>
      <% } %>

    </div>
    <!-- input and button // click button, grabs the text from the input, get rid of form for now / tie event listener to button. -->
          <input type="text" name="" value="" id="topicChoice">
          <button id = "headlineSearcher" type="button" name="button" id="activate"> Let's find some headlines! </button>
          <h3 id="titleDisplay"></h3>
          <h3> <a target="_blank" id="urlDisplayLink" href=""></a> </h3>
          <img id= "imageDisplay"src="" alt="">

          <button id="swipeRight" type="submit" name="button"> Swipe Right! </button>
          <button id="swipeLeft" type="submit" name="button"> Swipe Left! </button>
          <a href="/profile" class="btn btn-default btn-sm" > Swipe Left!</a>

    <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
    <script src="main.js"></script>

</body>

</html>
